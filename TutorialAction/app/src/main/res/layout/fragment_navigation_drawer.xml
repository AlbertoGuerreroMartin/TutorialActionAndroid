<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/drawer_image"
            android:layout_gravity="center_horizontal"
            android:contentDescription="TALogo" />

        <TextView
            android:id="@+id/user_fullname_drawer_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Nombre"/>

        <TextView
            android:id="@+id/username_drawer_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="Usuario"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"/>

        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reserves_drawer_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Ripple" >

                    <LinearLayout
                        android:id="@+id/reserves_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:src="@drawable/ic_list_black"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="#000000"
                            android:text="@string/reserves_section_title"/>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>


                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/completed_tutorships_drawer_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Ripple" >

                    <LinearLayout
                        android:id="@+id/completed_tutorships_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:src="@drawable/ic_done_black"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="#000000"
                            android:text="@string/completed_tutorships_section_title"/>

                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/logout_drawer_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Ripple" >

                    <LinearLayout
                        android:id="@+id/logout_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:src="@drawable/logout"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="#000000"
                            android:text="@string/logout_section_title"/>

                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>